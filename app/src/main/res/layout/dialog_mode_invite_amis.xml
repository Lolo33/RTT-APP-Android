<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSep0"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@color/black_overlay" />

    <TextView
        android:id="@+id/tvAmiRTT"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/fleche_droite"
        android:drawableStart="@drawable/icone_ami"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="Inviter des Mates"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/tvSep0"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvSep1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_overlay"
        android:layout_below="@+id/tvAmiRTT"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvAmiSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icone_sms"
        android:elevation="1dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="Inviter par SMS"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/tvSep1"
        android:drawableEnd="@drawable/fleche_droite"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvSep2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_overlay"
        android:layout_below="@+id/tvAmiSMS"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvAmiFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icone_fb"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="Inviter des amis Facebook"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/tvSep2"
        android:layout_alignParentStart="true"
        android:drawableEnd="@drawable/fleche_droite"
        android:layout_alignEnd="@+id/tvAmiSMS" />

    <TextView
        android:id="@+id/tvSep3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_overlay"
        android:layout_below="@+id/tvAmiFB"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnFermerAmis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvAmiFB"
        android:layout_margin="10dp"
        android:text="Fermer" />

</RelativeLayout>