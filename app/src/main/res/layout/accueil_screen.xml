<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlAccueil"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitreAccueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Bievenue, %pseudo%"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitreAccueil"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="Reserve Ton Terrain (RTT) te permet de trouver des matchs ou des tournois de foot en salle organisés dans les complexes à proximité de chez toi!"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnSearchEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_custom_primary"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Chercher des évenements"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnOrgaEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSearchEvent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_custom_primary"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Organiser un match"
        android:textColor="@android:color/background_light"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnMesEvents"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnOrgaEvent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_custom_primary"
        android:drawableStart="@android:drawable/ic_menu_my_calendar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Voir mes évenements"
        android:textColor="@android:color/background_light" />
</RelativeLayout>