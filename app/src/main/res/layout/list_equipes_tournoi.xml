<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNomTeam"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="Equipe 1"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/textViewNbJoueursTeam"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewNomTeam"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/textView5"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="** Joueurs"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <com.matemaker.rtt.app.Classes.Adapter.ExtendedListView
        android:id="@+id/LvJoueurs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewNbJoueursTeam"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text=">"
        android:textColor="@color/colorTitre"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>